@model CxcProject.Models.TipoDocumento
@{
    ViewData["Title"] = "Eliminar Tipo de Documento";
}

<div class="container mt-4">
    <h2 class="mb-4 text-danger">🗑 Eliminar Tipo de Documento</h2>
    <div class="alert alert-danger">
        <strong>¿Estás seguro?</strong> Esta acción no se puede deshacer.
    </div>
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3">Cuenta Contable</dt>
                <dd class="col-sm-9">@Model.CuentaContable</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@(Model.Estado ? "Activo" : "Inactivo")</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">⬅ Cancelar</a>
            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">Confirmar Eliminación</button>
            </form>
        </div>
    </div>
</div>
