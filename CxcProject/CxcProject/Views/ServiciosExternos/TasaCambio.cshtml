@{
    ViewData["Title"] = "Tasa de Cambio";

    string codigoMoneda = ViewBag.MonedaSeleccionada ?? "USD";

    var nombresMonedas = ViewBag.NombresMonedas as Dictionary<string, string>;

    string nombreMoneda = nombresMonedas != null && nombresMonedas.ContainsKey(codigoMoneda)
        ? nombresMonedas[codigoMoneda]
        : codigoMoneda;
}

<div class="container mt-4">
    <h2 class="text-primary mb-4">💱 Tasa de Cambio</h2>

    <div class="card shadow-sm">
        <div class="card-body text-center">
            <h4 class="mb-3">@nombreMoneda (@codigoMoneda)</h4>
            <p class="display-5 fw-bold text-success">@ViewBag.TasaCambio</p>
        </div>
    </div>

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">⬅ Volver</a>
    </div>
</div>