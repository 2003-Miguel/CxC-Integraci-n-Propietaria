@using System.Xml.Linq
@{
    ViewData["Title"] = "Salud Financiera";

    var xmlString = (string)ViewBag.SaludFinanciera ?? "";
    XElement xml = null;

    try
    {
        xml = XElement.Parse(xmlString);
    }
    catch
    {
        xml = null;
    }

    string cedula = "";
    string indicador = "";
    string monto = "";
    string comentario = "";
    string fechaConsulta = "";

    if (xml != null)
    {
        // Navegar por el XML usando namespaces
        XNamespace s = "http://schemas.xmlsoap.org/soap/envelope/";
        XNamespace ns = "http://tempuri.org/";

        var result = xml.Element(s + "Body")?
                        .Element(ns + "ConsultarSaludFinancieraResponse")?
                        .Element(ns + "ConsultarSaludFinancieraResult");

        if (result != null)
        {
            cedula = result.Element(ns + "CedulaRnc")?.Value ?? "";
            indicador = result.Element(ns + "IndicadorSalud")?.Value ?? "";
            monto = result.Element(ns + "MontoTotalAdeudado")?.Value ?? "";
            comentario = result.Element(ns + "Comentario")?.Value ?? "";
            fechaConsulta = result.Element(ns + "FechaConsulta")?.Value ?? "";
        }
    }
}
<div class="container mt-4">
    <h2 class="text-info mb-4">🏦 Salud Financiera</h2>

    @if (xml == null)
    {
            <div class="alert alert-danger">No se pudo procesar la información recibida.</div>
    }
    else
    {
            <div class="card shadow-sm">
                <div class="card-body">
                    <table class="table table-bordered table-striped">
                        <tbody>
                            <tr>
                                <th>Cédula / RNC</th>
                                <td>@cedula</td>
                            </tr>
                            <tr>
                                <th>Indicador de Salud</th>
                                <td>@indicador</td>
                            </tr>
                            <tr>
                                <th>Monto Total Adeudado</th>
                                <td>@monto</td>
                            </tr>
                            <tr>
                                <th>Comentario</th>
                                <td>@comentario</td>
                            </tr>
                            <tr>
                                <th>Fecha de Consulta</th>
                                <td>@fechaConsulta</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
    }

    <div class="mt-3">
        <a asp-action="Index" class="btn btn-secondary">⬅ Volver</a>
    </div>
</div>