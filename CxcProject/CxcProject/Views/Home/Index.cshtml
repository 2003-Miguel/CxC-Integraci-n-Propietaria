@{
    ViewData["Title"] = "Panel Principal";
}

<style>
    .main-container {
        display: flex;
        flex-direction: column;
        align-items: center;
        min-height: 80vh;
        padding: 20px;
        max-width: 1200px;
        margin: 24px auto 0 auto;
        text-align: center;
    }

    .cards-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 30px;
        width: 100%;
    }

    .card-custom {
        flex: 1 1 300px; 
        max-width: 350px;
        min-width: 280px;
        text-align: center;
    }

    .card-body {
        display: flex;
        flex-direction: column;
        justify-content: space-between;
        height: 100%;
    }

    .card-body a.btn {
        margin-top: 1rem;
        align-self: center;
        min-width: 140px;
    }
</style>

<div class="main-container">
    <h1 class="mb-4">Sistema de Cuentas por Cobrar</h1>

    <div class="cards-row">
        <div class="card card-custom shadow-sm border-primary">
            <div class="card-body">
                <h5 class="card-title">Clientes</h5>
                <p class="card-text">Gestión de clientes registrados en el sistema.</p>
                <a asp-controller="Clientes" asp-action="Index" class="btn btn-primary">Ir a Clientes</a>
            </div>
        </div>

        <div class="card card-custom shadow-sm border-success">
            <div class="card-body">
                <h5 class="card-title">Tipos de Documentos</h5>
                <p class="card-text">Administrar tipos de documentos y cuentas contables.</p>
                <a asp-controller="TiposDocumentos" asp-action="Index" class="btn btn-success">Ir a Documentos</a>
            </div>
        </div>

        <div class="card card-custom shadow-sm border-warning">
            <div class="card-body">
                <h5 class="card-title">Transacciones</h5>
                <p class="card-text">Registrar y consultar transacciones de clientes.</p>
                <a asp-controller="Transacciones" asp-action="Index" class="btn btn-warning text-white">Ir a Transacciones</a>
            </div>
        </div>

        <div class="card card-custom shadow-sm border-danger">
            <div class="card-body">
                <h5 class="card-title">Asientos Contables</h5>
                <p class="card-text">Registro de asientos contables y exportación a contabilidad.</p>
                <a asp-controller="AsientosContables" asp-action="Index" class="btn btn-danger">Ir a Asientos</a>
            </div>
        </div>
    </div>
</div>
