@{
    ViewData["Title"] = "Panel Principal";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">📌 Sistema de Cuentas por Cobrar</h1>

    <div class="row g-4">
        <!-- CRUD Clientes -->
        <div class="col-md-3">
            <div class="card shadow-sm border-primary">
                <div class="card-body text-center">
                    <h5 class="card-title">Clientes</h5>
                    <p class="card-text">Gestión de clientes registrados en el sistema.</p>
                    <a asp-controller="Clientes" asp-action="Index" class="btn btn-primary">Ir a Clientes</a>
                </div>
            </div>
        </div>

        <!-- CRUD Tipos de Documentos -->
        <div class="col-md-3">
            <div class="card shadow-sm border-success">
                <div class="card-body text-center">
                    <h5 class="card-title">Tipos de Documentos</h5>
                    <p class="card-text">Administrar tipos de documentos y cuentas contables.</p>
                    <a asp-controller="TiposDocumentos" asp-action="Index" class="btn btn-success">Ir a Documentos</a>
                </div>
            </div>
        </div>

        <!-- CRUD Transacciones -->
        <div class="col-md-3">
            <div class="card shadow-sm border-warning">
                <div class="card-body text-center">
                    <h5 class="card-title">Transacciones</h5>
                    <p class="card-text">Registrar y consultar transacciones de clientes.</p>
                    <a asp-controller="Transacciones" asp-action="Index" class="btn btn-warning text-white">Ir a Transacciones</a>
                </div>
            </div>
        </div>

        <!-- CRUD Asientos Contables -->
        <div class="col-md-3">
            <div class="card shadow-sm border-danger">
                <div class="card-body text-center">
                    <h5 class="card-title">Asientos Contables</h5>
                    <p class="card-text">Registro de asientos contables y exportación a contabilidad.</p>
                    <a asp-controller="AsientosContables" asp-action="Index" class="btn btn-danger">Ir a Asientos</a>
                </div>
            </div>
        </div>
    </div>
</div>