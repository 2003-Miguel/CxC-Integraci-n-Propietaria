@model IEnumerable<CxcProject.Models.AsientoContable>

@{
    ViewData["Title"] = "Asientos Contables";
}

<div class="container mt-4">
    <h2 class="mb-4 text-primary">📋 Lista de Asientos Contables</h2>

    @if (TempData["Success"] != null)
    {
            <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
            <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">➕ Nuevo Asiento</a>
        <a asp-action="Entradas" class="btn btn-secondary">📄 Ver Entradas Contables</a>
    </div>

    <table class="table table-bordered table-hover table-striped shadow-sm">
        <thead class="table-primary">
            <tr>
                <th>@Html.DisplayNameFor(m => m.Descripcion)</th>
                <th>@Html.DisplayNameFor(m => m.Cuenta)</th>
                <th>@Html.DisplayNameFor(m => m.TipoMovimiento)</th>
                <th>@Html.DisplayNameFor(m => m.Fecha)</th>
                <th>@Html.DisplayNameFor(m => m.Monto)</th>
                <th>@Html.DisplayNameFor(m => m.Estado)</th>
                <th>@Html.DisplayNameFor(m => m.Cliente)</th>
                <th class="text-center">Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <td>@item.Descripcion</td>
                        <td>@item.Cuenta</td>
                        <td>@item.TipoMovimiento</td>
                        <td>@item.Fecha.ToString("dd/MM/yyyy")</td>
                        <td>@item.Monto.ToString("C")</td>
                        <td>@(item.Estado ? "Activo" : "Inactivo")</td>
                        <td>@item.Cliente?.Nombre</td>
                            <td class="text-center">
                               <div style="display: flex; flex-wrap: wrap; justify-content: center; gap: 0.25rem;">
                                   <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning btn-sm">✏ Editar</a>
                                   <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info btn-sm text-white">ℹ Detalles</a>
                                   <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm">🗑 Eliminar</a>
                                   <form asp-action="Enviar" asp-route-id="@item.Id" method="post" class="m-0 p-0">
                                       <button type="submit" class="btn btn-primary btn-sm">📤 Enviar</button>
                                   </form>
                               </div>
                          </td>
                    </tr>
            }
        </tbody>
    </table>
</div>