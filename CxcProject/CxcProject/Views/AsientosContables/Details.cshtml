@model CxcProject.Models.AsientoContable

@{
    ViewData["Title"] = "Detalles Asiento Contable";

    var cuentas = new Dictionary<string, string>
    {
        { "2", "ACTIVOS FIJOS" },
        { "3", "CAJA CHICA" },
        { "4", "CUENTA CORRIENTE BANCO X" },
        { "6", "INVENTARIO" },
        { "8", "CUENTAS X COBRAR CLIENTE X" },
        { "13", "INGRESOS Y VENTAS" }
    };

    var descripcionCuenta = cuentas.ContainsKey(Model.Cuenta)
        ? $"{Model.Cuenta} - {cuentas[Model.Cuenta]}"
        : Model.Cuenta;
}

<div class="container mt-4">
    <h2 class="mb-4 text-info">ℹ Detalles del Asiento Contable</h2>
    <div class="card shadow-sm">
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Descripción</dt>
                <dd class="col-sm-9">@Model.Descripcion</dd>

                <dt class="col-sm-3">Cuenta</dt>
                <dd class="col-sm-9">@descripcionCuenta</dd>

                <dt class="col-sm-3">Tipo de Movimiento</dt>
                <dd class="col-sm-9">@Model.TipoMovimiento</dd>

                <dt class="col-sm-3">Fecha</dt>
                <dd class="col-sm-9">@Model.Fecha.ToString("dd/MM/yyyy")</dd>

                <dt class="col-sm-3">Monto</dt>
                <dd class="col-sm-9">@Model.Monto.ToString("C")</dd>

                <dt class="col-sm-3">Estado</dt>
                <dd class="col-sm-9">@((Model.Estado) ? "Activo" : "Inactivo")</dd>

                <dt class="col-sm-3">Cliente</dt>
                <dd class="col-sm-9">@Model.Cliente?.Nombre</dd>
            </dl>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a asp-action="Index" class="btn btn-secondary">⬅ Volver</a>
            <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning text-white">✏ Editar</a>
        </div>
    </div>
</div>